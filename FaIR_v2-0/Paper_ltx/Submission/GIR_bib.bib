issn = {01480227},
journal = {Journal of Geophysical Research Atmospheres},
number = {8},
publisher = {Blackwell Publishing Ltd},
title = {{Deriving emissions time series from sparse atmospheric mole fractions}},
volume = {116},
year = {2011}
}
@article{Rigby2014,
abstract = {Atmospheric measurements show that emissions of hydrofluorocarbons (HFCs) and hydrochlorofluorocarbons are now the primary drivers of the positive growth in synthetic greenhouse gas (SGHG) radiative forcing. We infer recent SGHG emissions and examine the impact of future emissions scenarios, with a particular focus on proposals to reduce HFC use under the Montreal Protocol. If these proposals are implemented, overall SGHG radiative forcing could peak at around 355 mW m−2 in 2020, before declining by approximately 26{\%} by 2050, despite continued growth of fully fluorinated greenhouse gas emissions. Compared to “no HFC policy” projections, this amounts to a reduction in radiative forcing of between 50 and 240 mW m−2 by 2050 or a cumulative emissions saving equivalent to 0.5 to 2.8 years of CO2 emissions at current levels. However, more complete reporting of global HFC emissions is required, as less than half of global emissions are currently accounted for.},
