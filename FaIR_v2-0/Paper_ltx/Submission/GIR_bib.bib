file = {::},
issn = {2190-4987},
journal = {Earth System Dynamics},
month = {nov},
number = {4},
pages = {729--739},
title = {{Evaluating climate emulation: fundamental impulse testing of simple climate models}},
url = {https://www.earth-syst-dynam.net/10/729/2019/},
volume = {10},
year = {2019}
}
