year = {2016}
}
@article{Simmonds2017,
abstract = {High frequency, {\textless}i{\textgreater}in situ{\textless}/i{\textgreater} global observations of HCFC-22 (CHClF{\textless}sub{\textgreater}2{\textless}/sub{\textgreater}), HCFC-141b (CH{\textless}sub{\textgreater}3{\textless}/sub{\textgreater}CCl{\textless}sub{\textgreater}2{\textless}/sub{\textgreater}F), HCFC-142b (CH{\textless}sub{\textgreater}3{\textless}/sub{\textgreater}CClF{\textless}sub{\textgreater}2{\textless}/sub{\textgreater}) and HCFC-124 (CHClFCF{\textless}sub{\textgreater}3{\textless}/sub{\textgreater}) and their main HFC replacements HFC-134a (CH{\textless}sub{\textgreater}2{\textless}/sub{\textgreater}FCF{\textless}sub{\textgreater}3{\textless}/sub{\textgreater}), HFC-125 (CHF{\textless}sub{\textgreater}2{\textless}/sub{\textgreater}CF{\textless}sub{\textgreater}3{\textless}/sub{\textgreater}), HFC-143a (CH{\textless}sub{\textgreater}3{\textless}/sub{\textgreater}CF{\textless}sub{\textgreater}3{\textless}/sub{\textgreater}), and HFC-32 (CH{\textless}sub{\textgreater}2{\textless}/sub{\textgreater}F{\textless}sub{\textgreater}2{\textless}/sub{\textgreater}) have been used to determine their changing global growth rates and emissions in response to the Montreal Protocol and its recent amendments. The 2007 adjustment to the Montreal Protocol required the accelerated phase-out of HCFCs with global production and consumption capped in 2013, to mitigate their environmental impact as both ozone depleting substances and important greenhouse gases. We find that this change has coincided with a reduction in global emissions of the four HCFCs with aggregated global emissions in 2015 of 444 ± 75 Gg/yr, in CO{\textless}sub{\textgreater}2{\textless}/sub{\textgreater} equivalent units (CO{\textless}sub{\textgreater}2{\textless}/sub{\textgreater} e) 0.75 ± 0.1 Gt/yr, compared with 483 ± 70 Gg/yr (0.82 ± 0.1 Gt/yr CO{\textless}sub{\textgreater}2{\textless}/sub{\textgreater} e) in 2010. (All quoted uncertainties in this paper are 1 sigma). About 80{\&}thinsp;{\%} of the total HCFC atmospheric burden in 2015 is HCFC-22, where global HCFC emissions appear to have been relatively constant in spite of the 2013 cap on global production and consumption. We attribute this to a probable increase in production and consumption of HCFC-22 in Montreal Protocol Article 5 (developing) countries and the continuing release of HCFC-22 from the large banks which dominate HCFC global emissions. Conversely, the four HFCs all show increasing annual growth rates with aggregated global HFCs emissions in 2015 of 329 ± 70 Gg/yr (0.65 ± 0.12 Gt/yr CO{\textless}sub{\textgreater}2{\textless}/sub{\textgreater} e) compared to 2010 with 240 ± 50 Gg/yr (0.47 ± 0.08 Gt/yr CO{\textless}sub{\textgreater}2{\textless}/sub{\textgreater} e). As HCFCs are replaced by HFCs we investigate the impact of the shift to refrigerant blends which have lower global warming potentials (GWPs). We also note that emissions of HFC-125 and HFC-32 appear to have increased more rapidly during the 2011{\&}ndash;2015 5-yr period compared to 2006{\&}ndash;2010.},
